# Server
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/yourdbname

# JWT (use strong random secret in production)
JWT_SECRET=
JWT_EXPIRES_IN=24h

# Email API Configuration (BigFat AI Labs Email Service)
EMAIL_API_URL=http://localhost:3001/api/v1/email
EMAIL_API_KEY=your_email_api_key_here
PROJECT_ID=consultation

# Sender Configuration (recipients only see the name, not the email)
EMAIL_FROM_NAME=BigFat AI Labs
EMAIL_FROM=noreply@yourdomain.com

# Template Variables
BRAND_NAME=BigFat AI Labs
SUPPORT_EMAIL=support@yourdomain.com

# Frontend URLs (for password reset links, CORS)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5001

# Razorpay (payment)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# PayPal (payment - optional, for dual Razorpay + PayPal)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# AWS S3 (file storage)
S3_BUCKET=
S3_REGION=ap-south-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Agora (video calls)
AGORA_APP_ID=
AGORA_APP_CERTIFICATE=

# Dev only: set ALLOW_OTP_IN_RESPONSE=true to return OTP in API (never in production)
# ALLOW_OTP_IN_RESPONSE=

# Rate limit: max requests per 15 min (default 500; increase if dashboard hits 429)
# RATE_LIMIT_MAX=500

# Admin bootstrap (for scripts/create-admin.js)
# ADMIN_EMAIL=admin@aob.com
# ADMIN_PASSWORD=Admin@123
# ADMIN_NAME=Admin
# ADMIN_MOBILE=9000090000